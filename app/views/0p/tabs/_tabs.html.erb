<!-- TAB -->
<!--    <%#= render partial: '0p/tabs/tabs', locals: {tabs: @tabs[:menu], tag: 'menu', active: @options[:menu] } %>
 -->
<% if tabs.count == 1 %>
  <%= render partial: '0p/general/icon_text', locals: {text: tabs[0], gly: 'arrow-right', clr: app_color[:app]} %>
<% else %>
    <ul class="nav nav-tabs">

      <!-- TABS -->
      <% unless tabs.blank? %>
        <!-- Recorre los TABS si no estan vaciós -->
        <% tabs.each do |t| %>
          <li class="nav-item">
            <!-- Construye el TAB y destaca el que está activo -->
            <!--%= link_to t, "#{link_tabs}#{t}", class: "nav-link #{(t == active ? 'active' : '')}" %-->
            <% if t.class.name == 'String' %>
              <%= link_to t, {controller: controller_name, action: action_name, html_options: get_html_opts(options, tag, t)}, class: "nav-link #{(t == active ? 'active' : '')}" %>
            <% else %>
              <% if t[1] %>
                <%= link_to t[0], {controller: controller_name, action: action_name, html_options: get_html_opts(options, tag, t[0])}, class: "nav-link #{(t[0] == active ? 'active' : '')}" %>
              <% end %>
            <% end %>
          </li>

        <% end %>
      <% end %>

    </ul> 
<% end %>
