<!-- ULTIMA VERSION -->
<% unless @coleccion[c].blank? or @coleccion[c].empty? %>

  <!-- BOTON NUEVO si hay MAS de 15 registros -->
  <!-- SOLO controladores con botón nuevo que tengan más de 15 registros (para no tener que ir al final de la lista) -->
  <% if new_button_conditions(c) and @coleccion[c].count > 15 %>
    <!-- c_to_name actualizado en capitan_cristiano_helper coon manejo de excepciones -->
    <!-- partial btn actualizado, NO TURBOLINK, no usa parámetro delete: -->
    <%= render partial: '0p/general/btn', locals: {texto: c_to_name(get_controller(c)), gly: 'plus-circle', link: get_new_link(get_controller(c)), clr: color(get_controller(c))} %>

    </br></br>
  <% end %>

  <!-- PAGINACION -->
  <% if @paginate[c] %>
    <%= paginate @coleccion[c] %>
    <small><small><%= page_entries_info(@coleccion[c]) %></small></small>
  <% end %>

  <% if partial?(c, 'list', 'list') %>
    <%= render partial: "#{c}/list/list", locals: {coleccion: @coleccion[c]} %>
  <% else %>
    <%= render partial: '0p/tabla/display_tabla', locals: {c: c} %>
  <% end %>
  
