    <small><small><%= page_entries_info(@coleccion[c]) %></small></small>
    <%= paginate @coleccion[c] %>
  <% end %>

<% end %>

<% if new_button_conditions(c) %>
  <%= render partial: '0p/general/btn', locals: {texto: c_to_name(get_controller(c)), gly: 'plus-circle', link: get_new_link(get_controller(c)), clr: color(get_controller(c))} %>
<% end %>
