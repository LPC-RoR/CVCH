<% if new_button_conditions(c) and a != 'seleccion' %>
  <!-- que NO son inline_form -->
  <% unless @coleccion[c].blank? %>
    <% if @coleccion[c].count > 15 %>
      <%= render partial: '0p/general/btn_turbolink', locals: {texto: c_to_name(c), gly: 'plus-circle', link: get_new_link(c), clr: color(c), delete: false} %>

      </br></br>
      
    <% end %>
  <% end %>
<% end %>

<% if @paginate[c] %>
  <%= paginate @coleccion[c] unless @coleccion[c].blank? %>
  <small><small><%= page_entries_info(@coleccion[c]) %></small></small>
<% end %>

<table class="table table-striped table-sm  thead-dark">
  <thead>
   	<%= render partial: '0p/tabla/th', locals: {c: get_controller(c)} unless ['directorios', 'documentos', 'archivos', 'imagenes'].include?(c) %>
  </thead>

  <tbody>
  	<!-- Opci贸n para evitar escribir el parcial _modelo.html.erb en cada controlador-->
  	<% unless @coleccion[c].blank? %>
	  	<% @coleccion[c].each do |objeto| %>
		  	<%= render partial: "/0p/tabla/modelo", locals: {a: a, objeto: objeto} %>
  		<% end  %>
  	<% end %>
  </tbody>
</table>

<% unless @coleccion[c].blank? %>
  <% if @paginate[c] and @coleccion[c].count > 15 %>
    <small><small><%= page_entries_info(@coleccion[c]) %></small></small>
    <%= paginate @coleccion[c] %>
  <% end %>
<% end %>

