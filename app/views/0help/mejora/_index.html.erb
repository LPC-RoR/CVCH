<% unless @coleccion['mejoras'].empty? %>
	<%= render partial: '0p/general/titulo', locals: {c: 'mejoras', a: nil, titulo: 'Mejoras', size: '5'} %>
	<table class="table table-striped table-sm  thead-dark">
		<tbody>
			<% @coleccion['mejoras'].each do |mej| %>
				<tr><td><%= "| #{mej.mejora} |" %></td><td><%= render partial: '0p/tabla/btns', locals: {a: 'index', objeto: mej} %></td></tr>
				<tr><td><small><%= sanitize mej.d_detalle %></small></td></tr>
			<% end %>
		</tbody>
	</table>
<% end %>
<%= render partial: '0p/general/titulo', locals: {c: 'mejoras', a: nil, titulo: '+ Mejora', size: '5'} %>
<%= form_for :mejora_base, url: "/mejoras/nuevo?class_name=#{@objeto.class.name}&objeto_id=#{@objeto.id}" do |form| %>
	<div class='form-inline'>
		<small><%= form.label :mejora %></small></br>
		<%= form.text_field(:mejora, size: 67, class: 'form-control' ) %>
	</div>
	<small><%= form.label :detalle %></small></br>
  	<%= form.text_area :detalle, size: '68x3' %>
	<%= form.submit '+ Mejora'  %>
<% end  %>
