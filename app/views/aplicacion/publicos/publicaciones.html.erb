<%= render partial: 'aplicacion/publicos/partials/titulo_especie', locals: {objeto: @objeto} %>

<div class="row">
	<div class="col-lg-3 col-xs-12">
		<p class='text-info'>Etiquetas</p>
		<small><small><ul>
		<% @etiquetas.each do |tag| %>
			<li>
				<% if tag.especie == @objeto.filo_especie %>
					<i class="bi bi-check-all"></i>
				<% end %>
				<%= link_to tag.especie, tag %> | <%= tag.publicaciones.count %></br>
				<small><%= tag.publicaciones.map {|pub| pub.year}.uniq %></small>
			</li>
		<% end %>		
		</ul></small></small>
	</div>
	<div class="col-lg-9">
		<p class='text-info'>Publicaciones</p>
		<%= render partial: '0p/tabla/tabla', locals: {c: 'publicaciones'} %>
	</div>
</div>

