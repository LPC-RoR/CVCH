<small>
	<% if admin? %><a data-toggle="collapse" href="#collapseSinonimo<%=objeto.id%>" role="button" aria-expanded="false" aria-controls="collapseSinonimo<%=objeto.id%>"><% end %>
		<i class="bi bi-tag"></i> 
	<% if admin? %></a><% end %>

	<% unless objeto.correccion.blank? %>
		<i class="bi bi-arrow-repeat text-info"></i>
	<% end %>

	<% if objeto.especie.present? %>
		<%= link_to objeto.nombre, objeto.especie %> 
	<% else %>
		<%= objeto.nombre %> 
	<% end %>
	( <%= objeto.especie.present? ? objeto.especie.publicaciones.count : 0 %> ) 
	<% if objeto.sinonimo_especie? %><i class="bi bi-flag text-danger"></i><% end %>
	<% if objeto.multiple? %><i class="bi bi-intersect text-danger"></i><% end %>

	<% if objeto.especie.blank? and admin? %>
		<%= link_to "/filo_sinonimos/#{objeto.id}/borrar?indice=#{@objeto.id}" do %>
			<i class="bi bi-trash"></i>
		<% end %>
	<% end %>
	</br>

	<% if admin? %>
	<div class="collapse" id="collapseSinonimo<%=objeto.id%>">
	  <div class="card card-body">
	  	<%= render partial: 'taxonomia/filo_sinonimos/list/form_set_sinonimo', locals: {objeto: objeto} %>
	  </div>
	</div>
	<% end %>

</small>