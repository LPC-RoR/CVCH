<% unless elemento.blank? %>
	<%= render partial: 'taxonomia/filo_elementos/partials/line_elemento', locals: {objeto: elemento} %>
	<% unless elemento.children.empty? %>
		<% elemento.children.order(:filo_elemento).each do |sub_elemento| %>
			<%= render partial: 'taxonomia/filo_elementos/partials/show_tree', locals: {elemento: sub_elemento} %>
		<% end %>
	<% end %>
	<% unless elemento.filo_especies.empty? %>
		<% elemento.filo_especies.order(:filo_especie).each do |especie| %>
			<%= render partial: 'taxonomia/filo_elementos/partials/line_especie', locals: {objeto: especie} %>
		<% end %>
	<% end %>
<% end %>