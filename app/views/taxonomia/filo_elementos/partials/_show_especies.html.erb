<% elemento.filo_especies.each do |especie| %>
	<tr>
		<td style="padding-left:<%="#{20*10}"%>px">
			<small>
				<% if especie.especies.count == 0 %>
					<%= "[Especie] - " %><i class="bi bi-bug"></i><%= " #{especie.filo_especie}" %>
				<% else %>
					<%= "[Especie] - " %><i class="bi bi-bug"></i><%= link_to " #{especie.filo_especie}", "publicos/publicaciones?indice=#{especie.id}" %>
				<% end %>
			</small>
		</td>
		<% if controller_name == 'especies' %><td><%= render partial: '0p/tabla/btns', locals: {a: 'index', objeto: especie} %></td><% end %>
	</tr>
	<% unless especie.children.empty? %>
		<% especie.children.each do |subespecie| %>
		<tr>
			<td style="padding-left:<%="#{25*10}"%>px">
				<small>
					<% if subespecie.especies.count == 0 %>
						<%= "[SubEspecie] - " %><i class="bi bi-bug"></i><%= " #{subespecie.filo_especie}" %>
					<% else %>
						<%= "[SubEspecie] - " %><i class="bi bi-bug"></i><%= link_to " #{especie.filo_especie}", "publicos/publicaciones?indice=#{subespecie.id}" %>
					<% end %>
				</small>
			</td>
			<% if controller_name == 'especies' %><td><%= render partial: '0p/tabla/btns', locals: {a: 'index', objeto: subespecie} %></td><% end %>
		</tr>
		<% end %>
	<% end %>
<% end %>
