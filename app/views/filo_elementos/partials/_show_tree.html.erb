<% unless base.blank? %>
	<table class='table-borderless'>
		<tbody>
			<tr>
				<td><small><b><i class="bi bi-diagram-2"></i><%= "#{base.filo_elemento} (#{base.n_especies})" %></b></small></td>
				<% if controller_name == 'especies' %>
					<td><%= render partial: '0p/tabla/btns', locals: {a: 'index', objeto: base} %></td>
				<% end %>
			</tr>
			<%= render partial: 'filo_elementos/partials/show_nivel', locals: {elemento: base} unless base.children.empty? %>
			<%= render partial: 'filo_elementos/partials/show_especies', locals: {elemento: base} unless base.filo_especies.empty? %>
		</tbody>
	</table>
<% end %>