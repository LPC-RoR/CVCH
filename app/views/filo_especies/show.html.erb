<h5><i class="bi bi-bug"></i><%= @objeto.filo_especie %></h5>
<small>Padre: <%= @objeto.padre.class.name %> <%= link_to @objeto.padre.send(@objeto.padre.class.name.tableize.singularize), @objeto.padre unless @objeto.padre.blank? %></small></br>

<% if admin? %>
	<div class='row'>
		<div class='col-md-6'>
			<% if @objeto.padre.class.name == 'FiloElemento' %>
				<%= render partial: '0p/general/icon_text', locals: {text: 'Sub Especies', gly: 'bug', clr: 'info'} %>
				<%= render partial: '0p/tabla/tabla', locals: {c: 'filo_especies'} %>

				<%= render partial: 'filo_especies/partials/form_nueva_sub_especie' %>
			<% end  %>
			<hr>
			<%= render partial: '0p/general/icon_text', locals: {text: 'Sinonimia', gly: 'bug', clr: 'info'} %>
			<%= render partial: '0p/tabla/tabla', locals: {c: 'sinonimos-filo_especies'} %>

			<%= render partial: 'filo_especies/partials/form_nuevo_sinonimo' %>
		</div>
		<div class='col-md-6'>
			<%= render partial: '0p/general/icon_text', locals: {text: 'Etiquetas de especies asociadas', gly: 'tag', clr: 'info'} %>
			<%= render partial: '0p/tabla/tabla', locals: {c: 'especies'} %>

			<%= render partial: 'filo_especies/partials/form_asociar_etiqueta' %>
		</div>
	</div>
	<hr>
<% end %>

<%= render partial: '0p/general/icon_text', locals: {text: 'Publicaciones', gly: 'bug', clr: 'info'} %>
<%= render partial: '0p/tabla/tabla', locals: {c: 'publicaciones'} %>
