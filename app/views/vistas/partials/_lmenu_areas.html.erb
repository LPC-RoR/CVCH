<div class="lmenu-box">
	<h6 class="text-info"><i class="bi bi-check-square"></i> Ãreas</h6>
	<% @sel_areas.each do |area| %>
		<small>
		<div class="row">
			<div class="col-9">
				<div style="padding-left: 1em;">
					<% if @modelo == area[0].class.name and @id == area[0].id %>
						<b class='text-muted'><%= area[0].area %></b></br>
					<% else %>
						<%= link_to area[0].area, "vistas?html_options[modelo]=#{area[0].class.name}&html_options[id]=#{area[0].id}" %>
					<% end %>
				</div>
			</div>
			<div class="col-3" align="right" style="padding-right: 1em;">
				<%= area[1] == 0 ? '-' : area[1] %>
			</div>
		</div>
		</small>

	<% end %>
</div>