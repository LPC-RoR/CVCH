<div class="lmenu-box">
	<h6 class="text-info"><i class="bi bi-folder"></i> Carpetas</h6>
	<% @sel_carpetas.each do |carpeta| %>
		<small>
		<div class="row">
			<div class="col-9">
				<div style="padding-left: 1em;">
					<% if @modelo == carpeta[0].class.name and @id == carpeta[0].id %>
						<b class='text-muted'><%= carpeta[0].carpeta %></b></br>
					<% else %>
						<%= link_to carpeta[0].carpeta, "vistas?html_options[modelo]=#{carpeta[0].class.name}&html_options[id]=#{carpeta[0].id}" %>
					<% end %>
				</div>
			</div>
			<div class="col-3" align="right" style="padding-right: 1em;">
				<%= carpeta[1] == 0 ? '-' : carpeta[1] %>
			</div>
		</div>
		</small>

	<% end %>
</div>