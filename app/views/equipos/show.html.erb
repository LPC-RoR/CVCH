<%= render partial: '0p/general/o_titulo', locals: {o: @objeto, a: action_name, size: '5'} %>
<div class='row'>
	<div class='col-md-6'>
		<%= render partial: '0p/general/titulo', locals: {c: 'perfiles', a: 'index', titulo: 'Participantes', size: '5'} %>
		<% unless @coleccion['perfiles'].empty? %>
			<%= render partial: '0p/tabla/solo_tabla', locals: {c: 'perfiles', a: 'index'} %>
		<% end %>
	</div>
	<div class='col-md-6'>
		<%= render partial: '0p/general/titulo', locals: {c: 'carpetas', a: 'index', titulo: 'Carpetas', size: '5'} %>
		<% if @carpetas_seleccion.any? %>
			<%= form_for :carpeta_base, url: "/equipos/nueva_carpeta_equipo?equipo_id=#{@objeto.id}" do |form| %>
				<div class='form-inline'>
					<%= form.select :carpeta_id, @carpetas_seleccion.collect { |p| [p.carpeta, p.id] }, include_blank: false, prompt: "Seleccione Carpeta" %>
					<%= form.submit '+ Carpeta'  %>
				</div>
			<% end  %>
		<% else %>
			<h4 class='text-warning'>No hay carpetas personalizadas para compartir con el equipo de trabajo</h4>
		<% end %>
		<% unless @coleccion['carpetas'].empty? %>
			<%= render partial: '0p/tabla/solo_tabla', locals: {c: 'carpetas', a: 'index'} %>
		<% end %>
		</br>
	</div>
</div>
