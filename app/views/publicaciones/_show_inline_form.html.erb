<%= form_for :instancia_nuevo, url: "/instancias/nuevo?publicacion_id=#{@objeto.id}" do |form| %>
	<div class='row'>
		<div class = 'col-sm-3'>
			<%= form.select :concepto_id, Concepto.all.collect { |c| [c.concepto, c.id] } %>
		</div>
		<div class = 'col-sm-7'>
		<%= form.text_field(:instancia, class: 'form-control' ) %>
		</div>
		<div class = 'col-sm-2'>
		<%= form.submit '+ Ruta' %>
		</div>
	</div>
<% end  %>
</br>
