<% if usuario_signed_in? %>
	<%  if @objeto.estado == 'publicada' %>
		<!-- CALIFICACION -->
		<% if false %>
		<% end %>
	<% else %>	
		<!-- LINKS AREAS -->
		<% (Publicacion::DOC_TYPES - [@objeto.doc_type]).each do |doc_type| %>
			<%= render partial: '0p/tabla/btn', locals: {texto: "#{doc_type}", link: "/publicaciones/cambia_tipo?publicacion_id=#{o.id}&doc_type=#{doc_type}", clr: c_color(@objeto.class.name.tableize), delete: false }  %>
		<% end %>
		</br></br>
	<% end %>
<% end %>

<!-- CARPETAS Y DESPLIEGUE DE CITA -->
<div class='row'>
	<div class= 'col-md-4'>
		<% if usuario_signed_in? %>
			<% if @activo.administrador.present? %>
				<!-- AREAS -->
				<%= render partial: '0p/general/titulo', locals: {c: nil, a: nil, titulo: 'Gestion de Áreas', size: '5'} %>
				<% if @areas_seleccion.any? %>
					<%= form_for :area_base, url: "/areas/asigna?publicacion_id=#{@objeto.id}" do |form| %>
						<div class='form-inline'>
							<%= form.select :area_id, @areas_seleccion.collect { |area| [area.area, area.id] }, include_blank: false, prompt: "Seleccione Área" %>
							<%= form.submit '+ Área'  %>
						</div>
					<% end  %>
				<% end %>
				<!--/br-->
				<% unless @coleccion['areas'].empty? %>
					<%= render partial: '0p/tabla/tabla', locals: {c: 'areas', a: 'index'} %>
				<% end %>
			<% end %>
			<% if @objeto.estado == 'publicada' %>
				<!-- CARPETAS -->
				<%= render partial: '0p/general/titulo', locals: {c: nil, a: nil, titulo: 'Gestion de Carpetas', size: '5'} %>
				<% if @carpetas_seleccion.any? %>
					<%= form_for :carpeta_base, url: "/carpetas/asigna?publicacion_id=#{@objeto.id}" do |form| %>
						<div class='form-inline'>
							<%= form.select :carpeta_id, @carpetas_seleccion.collect { |cpta| [cpta.carpeta, cpta.id] }, include_blank: false, prompt: "Seleccione Carpeta" %>
							<%= form.submit '+ Carpeta'  %>
						</div>
					<% end  %>
				<% end %>
				<!--/br-->
				<% unless @coleccion['carpetas'].empty? %>
					<%= render partial: '0p/tabla/tabla', locals: {c: 'carpetas', a: 'index'} %>
				<% end %>
			<% end %>
		<% end %>

		<% if false %>
			<%= render partial: '0p/general/titulo', locals: {c: nil, a: nil, titulo: 'Evaluación', size: '5'} %>
			<table class="table table-striped table-sm  thead-dark">
				<tbody>
					<% Publicacion::EVALUACION.keys.each do |item| %>
						<tr>
							<th><small><%= item %></small></th>
							<td>
							<small><%= get_evaluacion_publicacion(o, item) %>
							<% get_btns_evaluacion(o, item).each do |btn| %>
								<%= link_to btn, cambia_evaluacion_publicacion_path(item: item, evaluacion: btn) %>
								<%#= link_to btn, link: "/publicaciones/cambia_evaluacion?publicacion_id=#{o.id}&item=#{item}&evaluacion=#{btn}" %>
							<% end %>
							</small>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		<% end %>

	</div>

	<div class='col-md-8'>
		<h6><%= "| #{@objeto.doc_type} | #{@objeto.estado} | #{@objeto.areas.map {|aa| aa.area}.join(' | ')} |" %></h6>
		<h6><%= @objeto.m_quote %></h6>

		<% unless @objeto.doi.blank? %>
			<%= link_to "https://doi.org/#{@objeto.doi}", "https://doi.org/#{@objeto.doi}", target: :blank %>
		<% end %>

		<% if usuario_signed_in? %>
			<% unless @duplicados_ids.empty? %>
				<% @duplicados.each do |duplicado| %>
					<h6><%= "| "%><%=link_to duplicado.doc_type, duplicado%><%=" | #{duplicado.estado} | #{duplicado.areas.map {|aa| aa.area}.join(' | ') unless duplicado.areas.empty?} |" %></h6>
					<h6><%= duplicado.m_quote %></h6>
				<% end %>
			<% end %>

			</br>

			<%= render partial: '0p/general/titulo', locals: {c: nil, a: nil, titulo: 'Ruta Conceptual', size: '5'} %>

			<%= form_for :instancia_nuevo, url: "/instancias/nuevo?publicacion_id=#{@objeto.id}" do |form| %>
				<%= form.select :concepto_id, Concepto.all.collect { |c| [c.concepto, c.id] } %>
				<div class='form-inline'>
					<%= form.text_field(:instancia, size: 81, class: 'form-control' ) %>
					<%= form.submit '+ Ruta' %>
				</div>
			<% end  %>

			<%= render partial: '0p/tabla/tabla', locals: {c: 'rutas', a: 'index'}  if @coleccion['rutas'].any? %>

			<% if @coleccion['propuestas'].any? %>
				<%= render partial: '0p/general/titulo', locals: {c: nil, a: nil, titulo: 'Propuestas', size: '5'} %>

				<%= render partial: '0p/tabla/tabla', locals: {c: 'propuestas', a: 'index'} %>
			<% end %>

		<% end %>

	</div>

</div>
</br></br></br>
<div class='row'>
	<div class='col-md-6'>
		<%= render partial: '0help/observacion/index' %>
	</div>
	<div class='col-md-6'>
		<%= render partial: '0help/mejora/index' %>
		<%= render partial: '0help/mejora/form' %>
	</div>
</div>
