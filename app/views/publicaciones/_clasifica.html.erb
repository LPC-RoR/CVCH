<% if usuario_signed_in? %>
	<%  if @objeto.estado == 'publicada' %>
		<!-- CALIFICACION -->
		<% if false %>
		<% end %>
	<% else %>	
		<!-- LINKS AREAS -->
		<% (Publicacion::DOC_TYPES - [@objeto.doc_type]).each do |doc_type| %>
			<%= render partial: '0p/tabla/btn', locals: {texto: "#{doc_type}", link: "/publicaciones/cambia_tipo?publicacion_id=#{o.id}&doc_type=#{doc_type}", delete: false }  %>
		<% end %>
		</br></br>
	<% end %>
<% end %>

<!-- CARPETAS Y DESPLIEGUE DE CITA -->
<div class='row'>
	<div class= 'col-md-4'>
		<% if usuario_signed_in? %>
		<div class='row'>
			<% if @objeto.estado == 'publicada' %>
				<div class='col-md-6'>
					<% if @objeto.estado == 'publicada' %>
						<%= render partial: '0p/list/o_links', locals: {titulo: 'Carpetas Actuales', coleccion: @carpetas_actuales, d_field: 'carpeta', o_id: 'carpeta_id', sel: 'no-sel', c: controller_name, a: 'cambia_carpeta', options: {publicacion_id: @objeto.id ,origen: 'actuales'}} %>
					<% end %>
				</div>
				<div class='col-md-6'>
					<% if @objeto.estado == 'publicada' %>
						<%= render partial: '0p/list/o_links', locals: {titulo: 'Destinos', coleccion: @carpetas_destino, d_field: 'carpeta', o_id: 'carpeta_id', sel: 'no-sel', c: controller_name, a: 'cambia_carpeta', options: {publicacion_id: @objeto.id ,origen: 'destinos'}} %>
					<% end %>
				</div>
			<% else %>
				<div class='col-md-6'>
					<%= render partial: '0p/list/o_links', locals: {titulo: 'Áreas Actuales', coleccion: @areas_actuales, d_field: 'area', o_id: 'area_id', sel: 'no-sel', c: controller_name, a: 'cambia_area', options: {publicacion_id: @objeto.id ,origen: 'actuales'}} %>
				</div>
				<div class='col-md-6'>
					<%= render partial: '0p/list/o_links', locals: {titulo: 'Destinos', coleccion: @areas_destino, d_field: 'area', o_id: 'area_id', sel: 'no-sel', c: controller_name, a: 'cambia_area', options: {publicacion_id: @objeto.id ,origen: 'destinos'}} %>
				</div>
			<% end %>
		</div>
		<% end %>
	</div>

	<div class='col-md-8'>
		<h6><%= "| #{@objeto.doc_type} | #{@objeto.estado} | #{@objeto.areas.map {|aa| aa.area}.join(' | ')} |" %></h6>
		<h6><%= @objeto.m_quote %></h6>

		<% unless @objeto.doi.blank? %>
			<%= link_to "https://doi.org/#{@objeto.doi}", "https://doi.org/#{@objeto.doi}", target: :blank %>
		<% end %>

		<% unless @duplicados_ids.empty? %>
			<% @duplicados.each do |duplicado| %>
				<h6><%= "| "%><%=link_to duplicado.doc_type, duplicado%><%=" | #{duplicado.estado} | #{duplicado.areas.map {|aa| aa.area}.join(' | ') unless duplicado.areas.empty?} |" %></h6>
				<h6><%= duplicado.m_quote %></h6>
			<% end %>
		<% end %>

	</div>

</div>

</br></br>
<% unless @objeto.estado == 'publicada' and not usuario_signed_in? %>
	<div class='row'>
		<div class='col-md-4'>
			<%= render partial: '0p/general/titulo', locals: {c: nil, a: nil, titulo: 'Evaluación', size: '5'} %>
			<table class="table table-striped table-sm  thead-dark">
				<tbody>
					<% Publicacion::EVALUACION.keys.each do |item| %>
						<tr>
							<th><small><%= item %></small></th>
							<td>
							<small><%= get_evaluacion_publicacion(o, item) %>
							<% get_btns_evaluacion(o, item).each do |btn| %>
								<%= link_to btn, cambia_evaluacion_publicacion_path(item: item, evaluacion: btn) %>
								<%#= link_to btn, link: "/publicaciones/cambia_evaluacion?publicacion_id=#{o.id}&item=#{item}&evaluacion=#{btn}" %>
							<% end %>
							</small>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<div class='col-md-8'>
			<%= render partial: '0p/t_list/t_list', locals: {c: 'instancias',a: 'index', titulo: 'Ruta Conceptual'} %>
		</div>
	</div>
	</br></br>
<% end %>
