<div class="lmenu-box">
	<div class="row">
		<div class="col-10 text-info">
			<i class="bi bi-check-square"></i> Áreas
		</div>
		<div class="col-2">
			<% if admin? %>
				<%= render layout: '0p/collapse/link', locals: {label: 'SelArea', objeto: nil, tooltip: 'Agregar Área'} do %>
					<i class="bi bi-plus-circle"></i>
				<% end %>
		  	<% end %>
		</div>
	</div>

	<% if admin? %>
		<%= render layout: '0p/collapse/display', locals: {label: 'SelArea', objeto: nil} do %>
			<small class="text-info"><b>Seleccionar Área</small></b></br>
			<div class="collapse-display-list">
				<% @areas_disponibles.each do |area_objeto| %>
					<small><%= link_to area_objeto.area, "/areas/#{area_objeto.id}/asigna?class_name=Publicacion&objeto_id=#{@objeto.id}" %></small></br>
				<% end %>
			</div>
		<% end %>
	<% end %>

	<small>
	<div style="padding-left: 1em; padding-right: 2em; line-height: 15px;">
		<% @objeto.areas.order(:area).each do |area| %>
			<div class="row">
				<div class="col-10">
					<%= link_to area.area, "/vistas?html_options[modelo]=Area&html_options[id]=#{area.id}" %>
				</div>
				<div class="col-2">
			   		<% if admin? and @objeto.areas.count > 1 %>
			   			<%= render layout: '0p/layout/tooltip_link', locals: {link: "/areas/#{area.id}/desasignar?class_name=Publicacion&objeto_id=#{@objeto.id}", tooltip: 'Desasigna Área'} do %>
				   			<i class="bi bi-trash"></i>
				   		<% end %>
			   		<% end %>
				</div>
			</div>
		<% end %>
	</div>
	</small>
</div>