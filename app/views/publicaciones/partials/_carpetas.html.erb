<p class='text-info'>
	<i class="bi bi-folder"></i>
	<%= titulo %>
	<% if admin? %>
		<a data-toggle="collapse" href="#collapse<%=tag%>" role="button" aria-expanded="false" aria-controls="collapse<%=tag%>">
			<i class="bi bi-folder-plus"></i>
		</a>
  	<% end %>
</p>

<% if admin? %>
	<div class="collapse" id="collapse<%=tag%>">
		<div class="card card-body">
			<small>
				<%= render partial: "publicaciones/partials/form_#{tag.downcase}", locals: {objeto: @objeto} %>
			</small>
		</div>
	</div>
<% end %>

<small>
<ul>
	<% coleccion.each do |carpeta| %>
	   	<li>
	   		<% if carpeta.publicaciones.ids.include?(@objeto.id) %>
	   			<i class="bi bi-check2-all"></i>
	   			<%= link_to "/carpetas/#{carpeta.id}/desasignar?class_name=#{@objeto.class.name}&objeto_id=#{@objeto.id}" do %>
	   				<i class="bi bi-x-circle"></i>
	   			<% end %>
	   		<% else %>
	   			<%= link_to "/carpetas/#{carpeta.id}/asigna?class_name=#{@objeto.class.name}&objeto_id=#{@objeto.id}" do %>
	   				<i class="bi bi-plus-circle"></i>
	   			<% end %>
	   		<% end %>

	   		<%= link_to carpeta.carpeta, carpeta %>
	   	</li>
	<% end %>
</ul>
</small>