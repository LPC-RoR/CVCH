<%= form_for :nueva_carpeta, url: "/carpetas/nuevo?objeto_id=#{objeto.id}" do |form| %>
	<%= render partial: '0p/form_fields/label', locals: { form: form, label: 'Nueva carpeta', v: true } %>
	<div class='form-inline'>

		<%= render partial: '0p/form_fields/text', locals: { form: form, token: :carpeta } %>

		<button type="submit" class="btn btn-info">
		  <i class="bi bi-plus-circle icon-white"></i>
		  <i class="bi bi-folder icon-white"></i>
		</button>
	</div>
<% end  %>
