<%= render partial: '0p/general/titulo', locals: {c: nil, a: nil, titulo: 'Especies', size: '6'} %>
<% if usuario_signed_in? %>
	<%= form_for :especie_base, url: "/especies/asigna?publicacion_id=#{@objeto.id}" do |form| %>
		<div class='form-inline'>
			<%= form.text_field(:especie, size: 28, class: 'form-control' ) %>
			<%= form.submit '+ Especie' %>
		</div>
	<% end  %>
<% end  %>

<%= render partial: '0p/tabla/solo_tabla', locals: {c: 'especies', a: 'index'} unless @coleccion['especies'].empty? %>