<!-- CATEGORIAS -->
<%= render partial: '0p/general/titulo', locals: {c: nil, a: nil, titulo: 'Categorías', size: '6'} %>
<% if usuario_signed_in? and @categorias_seleccion.any? %>
	<%= form_for :categoria_base, url: "/categorias/asigna?publicacion_id=#{@objeto.id}" do |form| %>
		<div class='form-inline'>
			<%= form.select :categoria_id, @categorias_seleccion.collect { |cat| [cat.categoria, cat.id] }, include_blank: false, prompt: "Seleccione Categoría" %>
			<%= form.submit '+ Categoría'  %>
		</div>
	<% end  %>
<% end %>
<!--/br-->
<% unless @coleccion['categorias'].empty? %>
	<%= render partial: '0p/tabla/tabla', locals: {c: 'categorias', a: 'index'} %>
<% end %>
