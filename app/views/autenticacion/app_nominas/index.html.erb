<%= render partial: '0p/tabs/tabs', locals: {token: :tab} %>

<% case @options[:tab] %>
<% when 'Nómina' %>
	<%= render partial: '0capitan/general/titulo_tabla', locals: {c: 'app_nominas', title: 'Nómina', link_new: '/app_nominas/new'} %>

	<%= render partial: '0p/tabla/tabla', locals: {c: 'app_nominas'} %>
<% when 'Usuarios' %>
	<%= render partial: '0capitan/general/titulo_tabla', locals: {c: 'usuarios', title: 'Usuarios', link_new: nil} %>

	<%= render partial: '0p/tabla/tabla', locals: {c: 'usuarios'} %>
<% end %>
